<h1>Comments</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Owner</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each comments}}
            <tr>
                <th scope="row">1</th>
                <td>{{id}}</td>
                <td>{{user.firstName}}</td>
                <td>{{generateDate date 'MMMM Do YYYY'}}</td>
                <td>
                    <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>